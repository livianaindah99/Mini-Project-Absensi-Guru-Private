<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#C2A6F4"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rekap_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USERNAME"
                android:fontFamily="@font/boogalo_regular"
                android:textSize="8pt"
                android:textStyle="bold"
                android:layout_margin="7dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/rekap_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                android:fontFamily="@font/boogalo_regular"
                android:textSize="8pt"
                android:textStyle="bold"
                android:layout_margin="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rekap_username" />

            <TextView
                android:id="@+id/rekap_absensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REKAP ABSENSI"
                android:fontFamily="@font/boogalo_regular"
                android:textSize="8pt"
                android:textStyle="bold"
                android:layout_margin="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rekap_pass" />

            <TextView
                android:id="@+id/txt_rek_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/boogalo_regular"
                android:textSize="9pt"
                android:layout_margin="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txt_rek_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_margin="7dp"
                android:fontFamily="@font/boogalo_regular"
                android:textSize="9pt"
                app:layout_constraintTop_toBottomOf="@id/txt_rek_username"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/txt_rekap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:fontFamily="@font/boogalo_regular"
                android:textSize="9pt"
                android:layout_margin="7dp"
                app:layout_constraintTop_toBottomOf="@id/txt_rek_pass"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>