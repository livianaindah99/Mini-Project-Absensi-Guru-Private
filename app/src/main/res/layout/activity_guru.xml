<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundisi"
    tools:context=".GuruActivity">

    <TextView
        android:id="@+id/jdl_absenguru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="DAFTAR ABSENSI GURU PRIVATE"
        android:textStyle="bold"
        android:fontFamily="@font/boogalo_regular"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/rv_absen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_absen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="40dp"
        android:paddingBottom="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logout_icon"
        android:layout_margin="15dp"
        android:backgroundTint="@color/colorNew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fabSize="normal"
        app:borderWidth="0dp"
        app:elevation="6dp"
        android:onClick="onClickLogout"/>

</androidx.constraintlayout.widget.ConstraintLayout>