<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#C2A6F4"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/foto_profil"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="#D3D3D3"
                android:layout_margin="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/id_guru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id Guru"
                android:fontFamily="@font/boogalo_regular"
                app:layout_constraintStart_toStartOf="@id/foto_profil"
                app:layout_constraintEnd_toEndOf="@id/foto_profil"
                app:layout_constraintTop_toBottomOf="@id/foto_profil"/>

            <TextView
                android:id="@+id/nama_guru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:fontFamily="@font/boogalo_regular"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="7dp"
                app:layout_constraintStart_toEndOf="@id/foto_profil"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/alamat_guru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:fontFamily="@font/boogalo_regular"
                android:textSize="18sp"
                android:layout_margin="7dp"
                app:layout_constraintTop_toBottomOf="@id/nama_guru"
                app:layout_constraintStart_toEndOf="@id/foto_profil"/>

            <TextView
                android:id="@+id/jenis_kelamin_guru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:fontFamily="@font/boogalo_regular"
                android:textSize="18sp"
                android:layout_margin="7dp"
                app:layout_constraintTop_toBottomOf="@id/alamat_guru"
                app:layout_constraintStart_toEndOf="@id/foto_profil"/>

            <TextView
                android:id="@+id/telp_guru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Telp"
                android:fontFamily="@font/boogalo_regular"
                android:textSize="18sp"
                android:layout_margin="7dp"
                app:layout_constraintTop_toBottomOf="@id/jenis_kelamin_guru"
                app:layout_constraintStart_toEndOf="@id/foto_profil" />

            <TextView
                android:id="@+id/username_guru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="232dp"
                android:text="Username"
                android:fontFamily="@font/boogalo_regular"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/foto_profil"
                app:layout_constraintTop_toBottomOf="@+id/telp_guru" />

            <TextView
                android:id="@+id/password_guru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_marginTop="10dp"
                android:paddingEnd="5dp"
                android:text="Password"
                android:fontFamily="@font/boogalo_regular"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/foto_profil"
                app:layout_constraintTop_toBottomOf="@id/username_guru" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>